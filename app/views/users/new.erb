<div class='div_center'>

<% if @errors %>

<span class='errors'>Error: <%= @errors %></span><br>
<hr><br>

<% end %>
<form id='new_user_form' action='/users' method='post'>
  <input type='text' name='user[username]' placeholder='username'><br>
  <input type='password' name='user[password]' placeholder='password'><br>
  <input type='text' name='user[email]' placeholder='email'><br>
  <input type='text' name='user[state]' placeholder='state'><br>
  <input type='text' name='user[city]' placeholder='city'><br>
  <input type='submit' value='Create Account!'>
</form>
</div>
